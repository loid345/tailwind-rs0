{
  "name": "tailwind-rs-leptos-demo",
  "version": "0.1.0",
  "description": "Comprehensive Leptos WASM demo for Tailwind-RS with Playwright testing",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:visual": "playwright test tests/visual-regression.spec.ts",
    "test:e2e": "playwright test tests/e2e-workflow.spec.ts",
    "test:accessibility": "playwright test tests/accessibility.spec.ts",
    "test:performance": "playwright test tests/performance.spec.ts",
    "build": "wasm-pack build --target web --out-dir pkg --dev",
    "build:release": "wasm-pack build --target web --out-dir pkg --release",
    "serve": "python3 -m http.server 8080",
    "dev": "concurrently \"npm run serve\" \"npm run test:ui\"",
    "install:playwright": "playwright install",
    "install:playwright-deps": "playwright install-deps"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "rust",
    "leptos",
    "tailwind",
    "wasm",
    "webassembly",
    "playwright",
    "testing",
    "e2e",
    "visual-regression"
  ],
  "author": "Tailwind-RS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/tailwind-rs"
  },
  "bugs": {
    "url": "https://github.com/your-org/tailwind-rs/issues"
  },
  "homepage": "https://github.com/your-org/tailwind-rs#readme"
}
